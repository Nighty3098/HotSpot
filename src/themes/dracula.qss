QWidget {
    background-color: #282a36;
    color: #f8f8f2;
    padding: 0px;
    margin: 0px;
}

QLineEdit {
    background-color: #282a36;
    border: none;
    border-radius: 15px;
    color: #f8f8f2;
    font-size: 12px;
    padding: 10px 18px;
    min-height: 30px;
    max-height: 30px;
    selection-background-color: #282a36;
}

QLineEdit:focus {
    border: none;
}

QLineEdit::placeholder {
    color: #f8f8f2;
}

QListWidget {
    background-color: #282a36;
    border: none;
    color: #f8f8f2;
    font-size: 12px;
    padding: 0px;
    outline: none;
}

QListWidget::item {
    color: #f8f8f2;
    background-color: #282a36;
    margin: 4px;
    font-size: 12px;
    padding: 5px 10px;
    min-height: 30px;
    max-height: 30px;
    border-radius: 12px;
    border: 0px solid #282a36;
}

QListWidget::item:selected {
    background-color: #44475a;
    color: #f8f8f2;
    font-weight: bold;
    border: none;
    border: 0px solid #a89984;
}

QScrollBar:vertical {
    background-color: transparent;
    width: 8px;
    margin: 0px;
}

QScrollBar::handle:vertical {
    background-color: #44475a;
    min-height: 20px;
    border-radius: 4px;
}

QScrollBar::handle:vertical:hover {
    background-color: #44475a;
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical {
    background: transparent;
}
